<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@drawable/bg"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        android:text="MATCHES:"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:textSize="32dp"
        android:background="@drawable/splash_bg"
        android:padding="12dp"
        android:textColor="@android:color/white"/>

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="32dp"
        android:id="@+id/firstLayout">

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:alpha="0.5"
                  android:background="@android:color/white"/>

            <com.united.sportsmens.views.ItemRowView
                    android:id="@+id/real"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
            />

            <TextView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_below="@+id/real"
                    android:padding="24dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="4dp"
                    android:layout_margin="4dp"
                    android:text="VS"/>

            <com.united.sportsmens.views.ItemRowView
                    android:id="@+id/manchester"
                    android:layout_below="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
            />


        </RelativeLayout>

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                android:id="@+id/secondLayout"
        >

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:alpha="0.5"
                  android:background="@android:color/white"/>

            <com.united.sportsmens.views.ItemRowView
                    android:id="@+id/cska"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
            />

            <TextView
                    android:id="@+id/divider2"
                    android:layout_below="@+id/cska"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="24dp"
                    android:layout_margin="4dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="4dp"
                    android:text="VS"/>

            <com.united.sportsmens.views.ItemRowView
                    android:id="@+id/chelsea"
                    android:layout_below="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
            />

        </RelativeLayout>

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                android:id="@+id/thirdLayout">

            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:alpha="0.5"
                  android:background="@android:color/white"/>

            <com.united.sportsmens.views.ItemRowView
                    android:id="@+id/barselona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
            />

            <TextView
                    android:id="@+id/divider3"
                    android:layout_below="@+id/barselona"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="24dp"
                    android:layout_margin="4dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="4dp"
                    android:text="VS"/>

            <com.united.sportsmens.views.ItemRowView
                    android:id="@+id/arsenal"
                    android:layout_below="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
            />

        </RelativeLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
